# Focus window to the left
alt + {_,shift + }Left
    bspc node -f prev.local.!hidden.window

# Focus window to the right
alt + {_,shift + }Right
    bspc node -f next.local.!hidden.window

# Focus window above
alt + {_,shift + }Up
    bspc node -f north.local.!hidden.window

# Focus window below
alt + {_,shift + }Down
    bspc node -f south.local.!hidden.window
